<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KayitOlActivity"
    android:orientation="vertical">

    <TextView
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_marginTop="125dp"
        android:textSize="50dp"
        android:gravity="center"
        android:text="BANKA UYGULAMASI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp">

        <EditText
            android:id="@+id/isim_kayit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="İsim Soyisim"></EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/no_kayit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kart nuramanız"></EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/mail_kayit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-posta"></EditText>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp">

        <EditText
            android:id="@+id/password_kayit"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Şifre"></EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_kayit"
        android:textColor="@android:color/white"
        android:background="#0080FF"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:text="KAYIT OL"
        android:layout_width="350dp"
        android:layout_height="50dp"></Button>

</LinearLayout>