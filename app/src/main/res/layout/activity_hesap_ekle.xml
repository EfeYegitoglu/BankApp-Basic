<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HesapEkleActivity"
    android:orientation="vertical">

    <TextView
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Eklemek istediğiniz Hesap Biligelirini Giriniz "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Yeni Hesap Bilgileri "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <EditText
        android:id="@+id/isimGir"
        android:hint="Adınız"
        android:layout_margin="20dp"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/kartNoGir"
        android:hint="KartNo"
        android:layout_margin="20dp"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/yeniEkle"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:text="hesap ekle"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="60dp"/>

    </LinearLayout>

</LinearLayout>